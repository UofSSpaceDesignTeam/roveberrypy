<Window x:Class="usstgui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:usstgui"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <CheckBox x:Name="InvertX" Content="Invert X" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="245,170,0,0" Checked="InvertX_Checked" Unchecked="InvertX_Checked"/>
        <CheckBox x:Name="InvertY" Content="Invert Y" HorizontalAlignment="Left" Margin="245,205,0,0" VerticalAlignment="Top" Checked="InvertY_Checked" Unchecked="InvertY_Checked"/>
        <Slider x:Name="scaler" HorizontalAlignment="Left" Margin="109,187,0,0" VerticalAlignment="Top" Width="89" Minimum="1" ValueChanged="slider_ValueChanged"/>
        <TextBlock x:Name="ScaleValue" HorizontalAlignment="Left" Margin="128,149,0,0" TextWrapping="Wrap" Text="Scale = 1" VerticalAlignment="Top"/>

    </Grid>
</Window>
