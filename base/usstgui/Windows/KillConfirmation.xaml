<Window x:Class="usstgui.KillConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:usstgui"
        mc:Ignorable="d"
        Title="Exit?"
		Height="130"
		Width="220"
		ResizeMode="NoResize">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="10"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Button x:Name="Exit" Content="Yes" Grid.Column="0" HorizontalAlignment="Center" Height="25" Grid.Row="1" VerticalAlignment="Center" Width="80" Click="KillApplication"/>
		<Button x:Name="Close" Content="No" Grid.Column="2" HorizontalAlignment="Center" Height="25" Grid.Row="1" VerticalAlignment="Center" Width="80" Click="CloseWindow"/>
		<TextBox Grid.ColumnSpan="3" BorderThickness="0" HorizontalAlignment="Center" FontSize="16" Height="23" TextWrapping="Wrap" Text="Exit Whole Application?" VerticalAlignment="Center"/>
	</Grid>
</Window> 
