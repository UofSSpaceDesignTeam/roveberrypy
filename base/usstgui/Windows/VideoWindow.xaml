<Window x:Class="usstgui.VideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:usstgui"
        mc:Ignorable="d"
        Title="Video Display" Height="540" Width="640">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="ArmVideo" Content="Arm" Grid.Row="0" Grid.Column="0" Width="100" Height="25" Click="startStream"/>
		<Button x:Name="DriveVideo" Content="Drive" Grid.Row="0" Grid.Column="1" Width="100" Height="25" Click="startStream"/>
		<Button x:Name="MastVideo" Content="Mast" Grid.Row="0" Grid.Column="2" Width="100" Height="25" Click="startStream"/>
		<Button x:Name="StopVideo" Content="None" Grid.Row="0" Grid.Column="3" Width="100" Height="25" Click="stopStream"/>
        <Image x:Name="VideoCanvas" Grid.ColumnSpan="4" Grid.Row="1" Source="../Resources/noStream.jpg"/>

    </Grid>
</Window>
