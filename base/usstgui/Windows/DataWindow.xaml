<Window x:Class="usstgui.DataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:usstgui"
        mc:Ignorable="d"
        Title="Data Viewer"
		Height="250"
		Width="400"
		ResizeMode="CanResizeWithGrip"
		ScrollViewer.VerticalScrollBarVisibility="Visible">
	<Grid Name="windowGrid" Margin="0">
		<Grid.RowDefinitions>
			<RowDefinition Height="25"/>
			<RowDefinition Height="30"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition MinWidth="100"/>
			<ColumnDefinition MinWidth="100" Width="1.5*"/>
			<ColumnDefinition Width="30"/>
		</Grid.ColumnDefinitions>
		<TextBox x:Name="inputBox"  Background="Beige" VerticalContentAlignment="Center" Height="22" Text="exampleKey"  Grid.Column="0" Grid.Row="0"/>
		<Button Content="Watch" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Width="50" Height="22" VerticalAlignment="Center" Click="addItem"/>
		<Label Content="Key" FontWeight="Bold"  Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
		<Label Content="Value" FontWeight="Bold" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
	</Grid>
</Window>
